<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <title>Pedidos - Admin Paygator</title>
  <style>
    body { font-family: Arial, sans-serif; background: #f5f5f5; }
    .container { max-width: 900px; margin: 40px auto; background: #fff; border-radius: 8px; box-shadow: 0 2px 8px #0001; padding: 32px; }
    h2 { text-align: center; margin-bottom: 24px; }
    table { width: 100%; border-collapse: collapse; margin-bottom: 24px; }
    th, td { padding: 10px; border-bottom: 1px solid #eee; text-align: left; }
    th { background: #28a745; color: #fff; }
    tr:hover { background: #f0f8ff; }
    .back { display: block; margin-bottom: 16px; color: #007bff; text-decoration: none; }
    .back:hover { text-decoration: underline; }
  </style>
</head>
<body>
  <div class="container">
    <a href="/admin" class="back">&larr; Voltar ao Dashboard</a>
    <h2>Pedidos</h2>
    <table>
      <thead>
        <tr>
          <th>ID do Pedido</th>
          <th>Vendedor</th>
          <th>Cliente</th>
          <th>Valor Total</th>
        </tr>
      </thead>
      <tbody>
        <% orders.forEach(function(o) { %>
          <tr>
            <td><%= o.orderId %></td>
            <td><%= o.public.vendorName %></td>
            <td><%= o.internal.vendorMerchant.name %></td>
            <td><%= o.public.cartTotal.toFixed(2) %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
    <a href="/admin" class="back">&larr; Voltar ao Dashboard</a>
  </div>
</body>
</html> 